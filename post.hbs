{{!< default}}
{{#post}}
<div class="main-container">
	<header class="page-header">
        <div class="background-image-holder parallax-background">
            <img class="background-image" alt="{{title}}" src="{{image}}">
		</div>
        <div class="container align-bottom">
            <div class="row">
                <div class="col-xs-12">
                    <h1 class="text-white title_index">{{title }}</h1>
					{{^if page}}
                    <span class="sub alt-font text-white">{{date format="DD MMMM YYYY"}}</span>
					{{/if}}
				</div>
            </div><!--end of row-->
        </div><!--end of container-->
	</header>
    <section class="article-single">
        <div class="container">
            <div class="row">
				{{#if page }}
				<div class="col-md-10 col-md-offset-1">
					<div class="article-body text-justify">{{ content }}</div>
				</div>
				{{else }}
                <div class="col-md-8">
                    <div class="article-body text-justify">{{ content }}</div>
                    <div class="author-details">
                        <img alt="Author" src="{{author.image}}">
                        <h5>{{author}}</h5>
                        <p>{{author.bio}}</p>
                        <ul class="social-icons">
                            <li><a href="https://www.twitter.com/{{author.twitter}}" target="_blank">
                                <i class="fa fa-twitter"></i></a></li>
                            <li><a href="https://www.facebook.com/{{author.facebook}}" target="_blank">
                                <i class="fa fa-facebook"></i></a></li>
                            <li><a href="{{author.website}}" target="_blank">
                                <i class="fa fa-rss"></i></a></li>
                        </ul>
                    </div>
                </div>
				<div class="col-sm-3 col-md-offset-1">
					<div class="blog-sidebar">
						{{> widget/sidebar_social }}
						{{> widget/tags }}
					</div>
				</div>
				{{/if}}
            </div>
        </div>
    </section>
</div>
{{/post}}
