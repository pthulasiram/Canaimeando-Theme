{{!> default}}
<div class="main-container">
    <header class="page-header">
        <div class="background-image-holder parallax-background">
            <img class="background-image" alt="Background Image" src="{{ asset "img/hero23.jpg"}}">
		</div>
		<div class="container">
			<div class="row">
				<div class="col-sm-12 text-center">
                {{#tag}}
					<span class="text-white alt-font"></span>
					<h1 class="text-white">{{name}}</h1>
                    <h3 class="text-white" style="padding:0 50px">
                    {{#if description}}
                        {{description}}
                    {{else}}
                        A {{../pagination.total}}-post collection
                    {{/if}}
                    </h3>
                {{/tag}}
				</div>
			</div>
		</div>
	</header>
	<section class="blog-masonry bg-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="blog-masonry-container">{{> loop }}</div>
                </div>
                <div class="col-sm-3">
                    <div class="blog-sidebar">{{> sidebar }}</div>
                </div>
            </div>
        </div>
    </section>
</div>
